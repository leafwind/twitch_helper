{
  "name": "Twitch Helper",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Twitch Helper: A slider when you watching Twitch.tv",
  "homepage_url": "http://bot.leafwind.tw",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  "permissions": [
    "https://*.twitch.tv/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.twitch.tv/*"
      ],
      "css": [
        "src/inject/inject.css"
      ]
    },
    {
      "matches": [
        "https://*.twitch.tv/*"
      ],
      "js": [
        "src/inject/inject.js", "js/jquery/jquery.min.js"
      ]
    }
  ]
}
